{
  "name": "@useblu/ocean-components",
  "version": "0.0.0-controlled-by-tags",
  "description": "React components that implement Ocean's Design System.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "react-component",
    "ocean design"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel lint build:lib build:storybook",
    "build:lib": "rollup -c",
    "build:storybook": "build-storybook",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "deploy:storybook": "storybook-to-ghpages",
    "format": "prettier --write 'src/**'",
    "format:check": "prettier --list-different src/**/*",
    "lint": "eslint 'src/**/*.{ts,tsx}'"
  },
  "repository": "git@github.com:Pagnet/ocean-ds-web.git",
  "author": "Blu Pagamentos <devs@useblu.com.br>",
  "license": "GPL-3.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@storybook/addon-a11y": "^6.0.2",
    "@storybook/addon-backgrounds": "^6.0.2",
    "@storybook/addon-controls": "^6.0.2",
    "@storybook/addon-docs": "^6.0.2",
    "@storybook/addon-viewport": "^6.0.4",
    "@storybook/react": "^6.0.2",
    "@storybook/storybook-deployer": "^2.8.6",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.8",
    "@types/classnames": "2.2.10",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/rollup-plugin-postcss": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "@useblu/tokens": "^2.0.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jest-dom": "^3.1.7",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-testing-library": "^3.6.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.3.0",
    "jest-sonar-reporter": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.1",
    "rollup-plugin-peer-deps-external": "^2.2.3",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "sass-loader": "^9.0.3",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "@useblu/tokens": ">=2.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "classnames": "2.2.6"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "storybook-deployer": {
    "commitMessage": "Deploy Storybook [skip ci]"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jestSonar": {
    "reportPath": "coverage/sonar-report"
  }
}
