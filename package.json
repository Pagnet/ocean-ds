{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build:libs": "lerna run build --stream",
    "build:storybook": "build-storybook -s .storybook/assets",
    "build:copy-files": "ts-node ./scripts/copy-files.ts",
    "build": "npm-run-all build:libs --parallel build:copy-files build:storybook",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "lerna run lint --stream",
    "watch:css": "lerna run --scope @useblu/ocean-core build:watch",
    "watch:storybook": "start-storybook -p 6006 -s .storybook/assets",
    "storybook": "npm-run-all build:libs --parallel watch:*",
    "deploy:storybook": "storybook-to-ghpages -s build:storybook",
    "cm": "cz",
    "version": "prettier --write '**/{CHANGELOG.md,lerna.json}'"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/addons": "^6.2.8",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.2.8",
    "@storybook/storybook-deployer": "^2.8.7",
    "@storybook/theming": "^6.2.8",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-loader": "^8.2.2",
    "commitizen": "^4.2.2",
    "css-loader": "^5.2.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jest-dom": "^3.8.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.0.1",
    "husky": "6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.30.0",
    "sass": "^1.32.10",
    "sass-loader": "10.1.1",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=12.8.0",
    "yarn": ">=1.22.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "storybook-deployer": {
    "commitMessage": "Deploy Storybook [skip ci]"
  }
}
